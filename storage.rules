rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Allow public read access to all files. This is necessary for images
    // and videos to be displayed on your website to all visitors.
    match /{allPaths=**} {
      allow read: if true;
    }

    // TEMPORARY: Allow all writes for debugging
    // TODO: Restore auth-only writes after fixing the issue
    match /{allPaths=**} {
      allow write: if true;
    }
  }
}
